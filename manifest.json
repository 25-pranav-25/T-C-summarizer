{
  "manifest_version": 3,
  "name": "Privacy Policy Q&A",
  "version": "1.2",
  "description": "Ask questions about the privacy policy on the current page.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab" 
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://*.ngrok-free.dev/"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}